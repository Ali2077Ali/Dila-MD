const fs = require('fs'); 

// Function to create the JSON file if it doesn't exist
const createJsonFileIfNotExists = () => {
    if (!fs.existsSync('./welcomeMessages.json')) {
        fs.writeFileSync('./welcomeMessages.json', JSON.stringify({}, null, 2));
        console.log('welcomeMessages.json file created!');
    } else {
        console.log('welcomeMessages.json file already exists.');
    }
};


const loadWelcomeMessages = () => {
    if (fs.existsSync('./welcomeMessages.json')) {
        welcomeMessages = JSON.parse(fs.readFileSync('./welcomeMessages.json'));
    } else {
        welcomeMessages = {};
    }
};


createJsonFileIfNotExists();


loadWelcomeMessages();
